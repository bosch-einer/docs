        // <li>{JSON.stringify({ [key]: value }, null, 2)}</li>
        <li>
          {(function renderSideBar(node) {
            if (!node.children) {
              return Object.entries(node).map(([key, value]) => {
                // console.log("node value:", value);
                return <div>{value.title}</div>;
              });
            } else {
              return (
                <div>
                  <h3>{node.name}</h3>
                  {renderSideBar(node.children)}
                </div>
              );
            }
          })(value)}
        </li>
      ))
    }
  </ul>
